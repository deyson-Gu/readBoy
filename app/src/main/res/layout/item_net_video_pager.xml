<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/video_default"
            android:scaleType="fitXY"
            android:focusable="false"
            android:layout_width="120dp"
            android:layout_height="80dp"

            />
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/iv_defult"
            android:src="@drawable/center_collect_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/rl_icon"
        >
        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_net_videoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频名称"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:textColor="@color/button_nocheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="20:00"
            />

    </LinearLayout>

</RelativeLayout>